@using Wuther.IdentityServer.Controllers.Account
@model UserInputModel

<div class="client-page">
    <div class="lead">
        <h1>User Add</h1>
        <p>Add a User</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Local Account</h2>
                </div>

                <div class="card-body">
                    <form asp-action="Add">
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input class="form-control" placeholder="UserName" name="UserName" asp-for="UserName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" placeholder="Email" asp-for="Email" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="GivenName"></label>
                            <input class="form-control" placeholder="GivenName" asp-for="GivenName" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="FamilyName"></label>
                            <input class="form-control" placeholder="FamilyName" asp-for="FamilyName" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="WebSite"></label>
                            <input class="form-control" placeholder="WebSite" asp-for="WebSite" autocomplete="off">
                        </div>
                        <button class="btn btn-primary" name="button" value="add">Add</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>